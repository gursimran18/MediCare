<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css">
    <!--font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <title>MediCare</title>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous">
      </script>
    
        


<!--include navbar-->
<%- include('../include/patientBooking_navbar') %>

<div class="container" style="margin-top: 40px; margin-left: 300px;">

  <div class="row mt-1">
    <div class="col-md-13 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
            </svg>&nbsp&nbspSchedule Appointment
        </h1>
        <%- include ("../partials/messages"); %>
        <form action="/P_dashboard/book_appoint/lock_appoint" method="POST">
            <pre>
          <div class="form-group">
            <label for="name" style="font-size: medium;">Name</label>
            <input type="text" name="name"
                        value='<%p_name%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="gender" style="font-size: medium;">Gender</label>
            <input type="text" name="gender"
                        value='<%=p_gender%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="age" style="font-size: medium;">Age</label>
            <input type="text" name="age"
                        value='<%=p_age%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="email" style="font-size: medium;">Email</label>
            <input type="text" name="email"
                        value='<%=p_email%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="phone" style="font-size: medium;">Phone</label>
            <input type="text" name="phone"
                        value='<%=p_phone%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="docname" style="font-size: medium;">Doctor Name</label>
            <input type="text" name="docname"
                        value='<%=p_phone%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="date" style="font-size: medium;">Date</label>
            <input type="text" name="date" 
                        value='<%=p_phone%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="stime" style="font-size: medium;">Start Time</label>
            <input type="text" name="stime"
                        value='<%=p_phone%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="etime" style="font-size: medium;">End Time</label>
            <input type="text" name="etime"
                        value='<%=p_phone%>'> <br>
            
          </div>

          <div class="form-group">
            <label for="mode" style="font-size: medium;">Mode</label>
            <input type="text" name="mode"
                        value='<%=p_phone%>'> <br>
            
          </div>



        </pre>

    

          <div class="form-group">
            <label for="symptoms" style="font-size: medium;">Symptoms</label>
            <input type="text" 
            class="input" 
            name="symptoms" 
             class="form-control form-control-lg" 
            placeholder="Enter some symptoms"
             value="<%= typeof symptoms != 'undefined' ? symptoms : '' %>">
            
          </div>

          <div class="form-group">
            <label for="height" style="font-size: medium;">Height</label>
            <input type="text" 
            class="input" 
            name="height" 
             class="form-control form-control-lg" 
            placeholder=" (in cm)"
             value="<%= typeof height != 'undefined' ? height : '' %>">
            
          </div>

          <div class="form-group">
            <label for="weight" style="font-size: medium;">Weight</label>
            <input type="text" 
            class="input" 
            name="weight" 
             class="form-control form-control-lg" 
            placeholder="(in kg)"
             value="<%= typeof weight != 'undefined' ? weight : '' %>">
            
          </div>
          
         
          
          <button type="submit" class="btn btn-primary btn-block">
            Confirm
          </button>

        </form>
      </div>
    </div>
  </div>
    
</div>



<!--include footer-->
<%- include('../include/_footer') %>

</body>

</html>


