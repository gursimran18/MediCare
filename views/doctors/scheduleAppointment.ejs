<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css">
    <!--font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <title><%=title%>MediCare</title>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous">
      </script>
<!--include navbar-->
<%- include('../include/docDashboardNavbar') %>

<div class="container" style="margin-top: 40px; margin-left: 300px;">

  <div class="row mt-1">
    <div class="col-md-13 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
            </svg>&nbsp&nbspSchedule Appointment
        </h1>
        <%- include ("../partials/messages"); %>
        <form action="/D_dashboard/scheduleAppointment" method="POST">
          <div class="form-group">
            <label for="date" style="font-size: medium;">Date</label>
            <input
              type="date"
              id="date"
              name="date"
              class="form-control form-control-lg"
              placeholder="Select Date"
              value="<%= typeof date != 'undefined' ? date : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="start_time" style="font-size: medium;">Start Time</label>
            <input
              type="time"
              id="start_time"
              name="start_time"
              class="form-control form-control-lg"
              placeholder="Select Start Time"
              value="<%= typeof start_time != 'undefined' ? start_time : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="end_time" style="font-size: medium;">End Time</label>
            <input
              type="time"
              id="end_time"
              name="end_time"
              class="form-control form-control-lg"
              placeholder="Select End Time"
              value="<%= typeof end_time != 'undefined' ? end_time : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="mode" style="font-size: medium;">Mode</label>
            <select id="mode" name="mode" class="form-control form-control-lg">
            <option value="Online">Online</option>
            <option value="Offline">Offline</option>
            <option value="Online/Offline">Both</option>
            </select>
          </div>
          <div class="form-group">
            <label for="average_time" style="font-size: medium;">Average Consulting Time</label>
            <select id="average_time" name="average_time" class="form-control form-control-lg">
            <option value="10 Minutes">10 Minutes</option>
            <option value="20 Minutes">20 Minutes</option>
            <option value="30 Minutes">30 Minutes</option>
            <option value="40 Minutes">40 Minutes</option>
            <option value="50 Minutes">50 Minutes</option>
            <option value="60 Minutes">60 Minutes</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Confirm
          </button>
        </form>
      </div>
    </div>
  </div>
    
</div>
<!--include footer-->
<%- include('../include/_footer') %>
</body>
</html>